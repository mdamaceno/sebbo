<div class="panel panel-default">
  <div class="panel-heading">Editando usuário</div>
  <div class="panel-body">
    <%= simple_form_for([:admin, @user]) do |f| %>
      <div class="row">
        <div class="form-group">
          <div class="col-md-2">
            <div class="col-md-12">
              <%= f.input :avatar, label: "Foto", input_html: { class: "form-control" } %>
            </div>
          </div>
          <div class="col-md-10">
            <div class="col-md-6">
              <%= f.input :name, label: "Nome", input_html: { class: "form-control" } %>
            </div>
            <div class="col-md-6">
              <%= f.input :email, label: "Email", input_html: { class: "form-control-static", 'disabled' => 'disabled' } %>
            </div>
            <div class="col-md-6">
              <%= f.input :doc, label: "CPF", input_html: { class: "form-control" } %>
            </div>
            <div class="col-md-3">
              <%= f.input :gender, label: "Gênero", input_html: { class: "form-control" } %>
            </div>
            <div class="col-md-3">
              <%= f.input :role, label: "Permissão", input_html: { class: "form-control" } %>
            </div>
            <div class="col-md-3">
              <%= f.input :contact1, label: "Telefone", input_html: { class: "form-control" } %>
            </div>
            <div class="col-md-3">
              <%= f.input :contact2, label: "Celular", input_html: { class: "form-control" } %>
            </div>
            <div class="col-md-12">
              <%= f.input :description, label: "Descrição", input_html: { class: "form-control ckeditor" } %>
            </div>
          </div>
          </div>
      </div>
      <%= f.button :submit, "Salvar", class: "btn btn-success btn-sm" %>
      <%= link_to "Cancelar", admin_users_path, class: "text-danger" %>
    <% end %>
  </div>
</div>
