<div class="panel panel-default">
  <div class="panel-heading">Editando usuário</div>
  <div class="panel-body">
    <%= simple_form_for([:admin, @user]) do |f| %>
      <div class="row">
        <div class="form-group">
          <div class="col-md-2">
            <div class="row">
              <div class="col-md-12">
                <%= f.input :avatar, label: "Foto", input_html: { class: "form-control" } %>
              </div>
            </div>
          </div>
          <div class="col-md-10">
            <div class="row">
              <div class="col-md-6">
                <%= f.input :name, label: "Nome", input_html: { class: "form-control" } %>
              </div>
              <div class="col-md-6">
                <%= f.input :email, label: "Email", input_html: { class: "form-control-static", 'disabled' => 'disabled' } %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <%= f.input :doc, label: "CPF", input_html: { class: "form-control" } %>
              </div>
              <div class="col-md-3">
                <%= f.input :gender, label: "Gênero", input_html: { class: "form-control" } %>
              </div>
              <div class="col-md-3">
                <%= f.input :role, label: "Permissão", input_html: { class: "form-control" } %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-3">
                <%= f.input :contact1, label: "Telefone", input_html: { class: "form-control" } %>
              </div>
              <div class="col-md-3">
                <%= f.input :contact2, label: "Celular", input_html: { class: "form-control" } %>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12">
                <%= f.input :description, label: "Descrição", input_html: { class: "form-control", "rows" => "10" } %>
              </div>
            </div>

            <!-- Endereço -->
            <%= f.simple_fields_for :addresses do |a| %>
              <div class="row">
                <div class="col-md-3">
                  <%= a.input :zipcode, label: "CEP", input_html: { class: "form-control" } %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-8">
                  <%= a.input :field1, label: "Endereço", input_html: { class: "form-control" } %>
                </div>
                <div class="col-md-2">
                  <%= a.input :field2, label: "Nº", input_html: { class: "form-control" } %>
                </div>
                <div class="col-md-2">
                  <%= a.input :field3, label: "Complemento", input_html: { class: "form-control" } %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-5">
                  <%= a.input :field4, label: "Bairro", input_html: { class: "form-control" } %>
                </div>
                <div class="col-md-5">
                  <%= a.input :city, label: "Cidade", input_html: { class: "form-control" } %>
                </div>
                <div class="col-md-2">
                  <%= a.input :state, label: "Estado", input_html: { class: "form-control" } %>
                  <%= a.input :user_id, as: :hidden, :input_html => { :value => @user.id } %>
                </div>
              </div>
            <% end %>
            <!-- /Endereço -->
          </div>
        </div>
      </div>
      <%= f.button :submit, "Salvar", class: "btn btn-success btn-sm" %>
      <%= link_to "Cancelar", admin_users_path, class: "text-danger" %>
    <% end %>
  </div>
</div>
